
<div class="login-box p-20">

  <%= image_tag("/assets/logo-grey.png", alt: "InfraOps Logo") %>

  <h2>Sign In</h2>
  <hr>

  <%= form_tag create_user_session_path, :role=>"form" do %>

    <div id="div_flash_message">
      <%= render :partial=>"/layouts/common/flash_message" -%>
    </div>

    <div class="form-group mt-10">
      <label for="exampleInputEmail1">Email address</label>
      <%= text_field_tag :email, params[:email], :placeholder=> "Email", :name => "email", :class=>"form-control"%>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <%= password_field_tag :password, '', :placeholder=> "Password", :name => "password", :class=>"form-control"%>
    </div>

    <%= submit_tag "Sign in", :class => "btn btn-primary pull-right" %>
    <div class="cl-10"></div>

  <% end %>



</div>


