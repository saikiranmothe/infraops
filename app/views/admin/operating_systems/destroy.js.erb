<% if @operating_system %>
  <% if @operating_system.new_record? %>

  	// Fill the right box with first operating_system details
  	$('#div_operating_system_details').html("<%= escape_javascript(render(:partial=>'summary')) %>");

  <% else %>

  	// Render the show partial to show flash message
  	$('#div_operating_system_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

  <% end %>

  // Render operating_systems List
  $('#div_operating_system_collections').html("<%= escape_javascript(render(:partial=>'index')) %>");

<% else %>

  var noResultsText = "<div id=\"div_admin_empty\" class=\"box text-color-grey p-80 text-align-center\" style=\"height:200px;\"><%= translate("forms.no_results_found") %></div>";
  $('#div_operating_system_index').html(noResultsText);
  $('#div_operating_system_details').html(noResultsText);

<% end %>
