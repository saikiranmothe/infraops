
<%# Displays list of @operating_systems %>
<div id="div_operating_system_collections">
	<% @operating_systems.each do |operating_system| %>
		<div id="div_operating_system_<%= operating_system.id %>">
			<%= render :partial=>"item", :locals=>{:operating_system=>operating_system} %>
		</div>
	<% end %>
	<% if @operating_systems.blank? %>
		<div id="div_operating_system_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @operating_systems.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @operating_systems, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
