
<%# Displays a detailed view of the department %>
<%# Display Flash Message if any only in case of ajax request %>
<% if request.xhr? %>
  <%= render :partial=>"layouts/common/flash_message" %>
<% end %>

<div class="panel panel-profile">
  <div class="panel-body" style="height:auto;">
    <div class="basic-profile" style="height:auto;padding:10px;">
      <%= link_to display_image(@department, :picture),
                  upload_image_link(@department, admin_department_path(@department), :picture),
                  :remote => true %>
      <div class="pull-left mb-20 text-color-gray">
        <div class="font-size-18 text-color-blue"><%= @department.name %></div>
        <div class="font-size-12 text-color-gray"> <%= @department.description %></div>
      </div>
      <div class="cl"></div>
    </div>

  </div>
</div>


<%= render :partial => "widgets/more_details", :locals=>{:data_model => @department,
                      :edit_link => edit_admin_department_path(@department),
                      :delete_link => admin_department_path(@department)} %>