<% if @departments.any? %>

	// Fill the right box with first department details in the list
	$('#div_department_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

	// Rendering the item list
	$('#div_department_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
	$('#div_department_drop_down').html("<%= escape_javascript(render(:partial=>"drop_down")) %>");

<% else %>

	var noResultsText = "<div id=\"div_admin_empty\" class=\"box text-color-grey p-80 text-align-center\" style=\"height:200px;\"><%= translate("forms.no_results_found") %></div>";
	$('#div_department_index').html(noResultsText);
	$('#div_department_details').html(noResultsText);

<% end %>