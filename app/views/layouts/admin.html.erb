    <%= yield :javascript_header -%>

  </head>

<body>

	<div class="frame">

		<%#* Display Sidebar -%>
    	<%= render :partial=>"/layouts/admin/sidebar" -%>

		<!-- Main content starts here-->
		<div class="content">

			<%#* Display Navbar -%>
    	<%= render :partial=>"/layouts/admin/navbar" -%>

			<div id="main-content" class="m-10 clearfix">
				<%= yield %>
			</div><!-- /Main Content  @7 -->

		</div><!-- / Content @5 -->

	</div> <!-- Frame -->

  <div class="row footer" style="margin:0px;background-color:#3d4a5d;color:#fff;height:50px;text-align:center;">
    <div class="col-md-12 text-center mt-15">
